---
interface Guide {
  id: string;
  data: { title?: string };
}

interface Props {
  title?: string;
  guides?: Guide[];
}

const { title, guides = [] } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title || 'Style Guide'}</title>
    <style is:global>
      * { box-sizing: border-box; }
      body {
        display: flex;
        margin: 0;
        min-height: 100vh;
        font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Helvetica,Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol";
        font-size: 16px;
        line-height: 1.5;
        color: #1f2328;
      }
      aside {
        width: 260px;
        flex-shrink: 0;
        border-right: 1px solid #d1d9e0;
        padding: 1rem;
      }
      aside ul { list-style: none; padding: 0; margin: 0; }
      aside li { margin: 0.5rem 0; }
      aside a { color: #1f2328; text-decoration: none; }
      aside a:hover { color: #0969da; }
      main {
        flex: 1;
        padding: 2rem;
        max-width: 900px;
      }
      a { color: #0969da; text-decoration: none; }
      a:hover { text-decoration: underline; }
      h1 { font-size: 2rem; font-weight: 600; border-bottom: 1px solid #d1d9e0; padding-bottom: 0.5rem; }
      h2 { font-size: 1.5rem; font-weight: 600; border-bottom: 1px solid #d1d9e0; padding-bottom: 0.3rem; margin-top: 1.5rem; }
      h3 { font-size: 1.25rem; font-weight: 600; margin-top: 1.5rem; }
      table {
        border-collapse: collapse;
        width: 100%;
        margin: 1rem 0;
      }
      th, td {
        border: 1px solid #d1d9e0;
        padding: 0.5rem 1rem;
        text-align: left;
      }
      th { background: #f6f8fa; font-weight: 600; }
      code {
        background: #f6f8fa;
        padding: 0.2rem 0.4rem;
        border-radius: 6px;
        font-size: 85%;
        font-family: ui-monospace,SFMono-Regular,SF Mono,Menlo,Consolas,Liberation Mono,monospace;
      }
      pre {
        background: #f6f8fa;
        padding: 1rem;
        border-radius: 6px;
        overflow-x: auto;
      }
      pre code { background: none; padding: 0; }
      ul, ol { padding-left: 2rem; }
      li { margin: 0.25rem 0; }
    </style>
  </head>
  <body>
    <aside>
      <nav>
        <ul>
          <li><a href="/styleguide/">Home</a></li>
          {guides.map((guide) => (
            <li>
              <a href={`/styleguide/${guide.id.replace(/guide$/, '')}/`}>
                {guide.data.title || guide.id}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </aside>
    <main>
      <slot />
    </main>
  </body>
</html>
